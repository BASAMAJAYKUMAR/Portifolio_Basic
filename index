  <script>
  /* -------------------------------
     Sample data, interactivity & progressive enhancements
     ------------------------------- */
  const projects = [
    {id:1,title:'Design System UI Kit',tags:['ui','tool'],img:'https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&s=1',desc:'A reusable design system and component library built with modular CSS and accessibility in mind.'},
    {id:2,title:'E-commerce SPA',tags:['web'],img:'https://images.unsplash.com/photo-1545239351-1141bd82e8a6?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&s=2',desc:'Fast, responsive Single Page Application with checkout and product filtering.'},
    {id:3,title:'Performance Dashboard',tags:['web','tool'],img:'https://images.unsplash.com/photo-1519389950473-47ba0277781c?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&s=3',desc:'A dashboard showing real-time metrics with charts and export features.'},
    {id:4,title:'Portfolio CMS',tags:['web','tool'],img:'https://images.unsplash.com/photo-1526322728959-8a3a56a1b8a6?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&s=4',desc:'A lightweight CMS for creatives to manage portfolios.'},
    {id:5,title:'Micro-interactions Library',tags:['ui'],img:'https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&s=5',desc:'Collection of performant micro-interactions using CSS & JS.'}
  ];

  const posts = [
    {id:1,title:'Improving Lighthouse Performance',date:'2025-06-12',excerpt:'Practical tips to optimize TTFB, render-blocking resources and bundle size.'},
    {id:2,title:'Design Tokens & Theming',date:'2025-04-03',excerpt:'Use tokens to keep your design consistent and themable across projects.'},
  ];

  // Render projects and blog
  const projectsGrid = document.getElementById('projectsGrid');
  const blogList = document.getElementById('blogList');
  const filter = document.getElementById('filter');

  function renderProjects(filterVal='all'){
    projectsGrid.innerHTML='';
    const filtered = projects.filter(p => filterVal==='all' || p.tags.includes(filterVal));
    filtered.forEach(p => {
      const el = document.createElement('article'); el.className='project'; el.tabIndex=0; el.setAttribute('data-id',p.id);
      el.innerHTML = `\n        <img loading="lazy" alt="${p.title}" src="${p.img}">\n        <h3>${p.title}</h3>\n        <p style=\"color:var(--muted);font-size:13px;\">${p.desc}</p>\n        <div class=\"tags\">${p.tags.map(t=>`<span class=\"tag\">${t}</span>`).join('')}</div>`;
      el.addEventListener('click',()=>openModal(p));
      projectsGrid.appendChild(el);
    });
  }

  function renderPosts(){
    blogList.innerHTML='';
    posts.forEach(post => {
      const el = document.createElement('article'); el.className='post';
      el.innerHTML = `\n        <img loading=\"lazy\" alt=\"${post.title}\" src=\"https://images.unsplash.com/photo-1503676260728-1c00da094a0b?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&s=6\">\n        <div>\n          <h4 style=\"margin:0 0 6px\">${post.title}</h4>\n          <div class=\"meta\">${post.date} • <span style=\"color:var(--muted)\">3 min read</span></div>\n          <p style=\"color:var(--muted);margin-top:8px\">${post.excerpt}</p>\n        </div>`;
      blogList.appendChild(el);
    });
  }

  // Modal
  const modal = document.getElementById('modal');
  const modalContent = document.getElementById('modalContent');
  const closeModalBtn = document.getElementById('closeModal');

  function openModal(project){
    modalContent.innerHTML = `\n      <h2>${project.title}</h2>\n      <img alt=\"${project.title}\" src=\"${project.img}\" style=\"width:100%;height:360px;object-fit:cover;border-radius:10px;margin-top:12px\">\n      <p style=\"color:var(--muted);margin-top:10px\">${project.desc}</p>\n      <div style=\"margin-top:10px\">\n        <a href=\"#\" class=\"btn\">Live demo</a>\n        <a href=\"#\" class=\"btn\">Source</a>\n      </div>`;
    modal.classList.add('show');
    closeModalBtn.focus();
  }
  closeModalBtn.addEventListener('click',()=>modal.classList.remove('show'));
  modal.addEventListener('click',(e)=>{ if(e.target===modal) modal.classList.remove('show') });

  // Filter
  filter.addEventListener('change',()=>renderProjects(filter.value));

  // Contact form: simple client-side validation and mailto fallback
  const form = document.getElementById('contactForm');
  const status = document.getElementById('formStatus');
  form.addEventListener('submit', (e)=>{
    e.preventDefault();
    const name = form.name.value.trim();
    const email = form.email.value.trim();
    const message = form.message.value.trim();
    if(!name || !email || !message){ status.textContent='Please fill the required fields.'; return }
    // Build mailto as a fallback — replace with an API call to send from server in production
    const subject = encodeURIComponent(form.subject.value || `Contact from ${name}`);
    const body = encodeURIComponent(`Name: ${name}\nEmail: ${email}\n\n${message}`);
    const mailto = `mailto:youremail@example.com?subject=${subject}&body=${body}`;
    window.location.href = mailto;
    status.textContent='Opening mail client…';
  });

  // Small UI: theme toggle (light/dark) — purely cosmetic
  const themeBtn = document.getElementById('themeBtn');
  let light = false;
  themeBtn.addEventListener('click', ()=>{
    light = !light;
    document.documentElement.style.setProperty('--bg', light? '#f6f9fc' : '#0f1724');
    document.documentElement.style.setProperty('--card', light? '#ffffff10' : '#0b1220');
    themeBtn.setAttribute('aria-pressed', String(light));
  });

  // Mobile drawer
  const hb = document.getElementById('hamburger');
  const drawer = document.getElementById('drawer');
  hb.addEventListener('click',()=>drawer.classList.toggle('show'));

  // Smooth in-page nav and active link handling
  document.querySelectorAll('nav a, .drawer a').forEach(a => {
    a.addEventListener('click', (e)=>{
      // preserve default for external or hashless
      e.preventDefault();
      const target = document.querySelector(a.getAttribute('href'));
      if(target) target.scrollIntoView({behavior:'smooth',block:'start'});
      document.querySelectorAll('nav a').forEach(x=>x.classList.remove('active'));
      a.classList.add('active');
      drawer.classList.remove('show');
    });
  });

  // Simple lazy fade-in on scroll
  const observer = new IntersectionObserver((entries)=>{
    entries.forEach(e=>{
      if(e.isIntersecting) e.target.classList.add('show');
    });
  },{threshold:0.12});
  document.querySelectorAll('.fade-up').forEach(el=>observer.observe(el));

  // Init
  renderProjects(); renderPosts(); document.getElementById('year').textContent = new Date().getFullYear();

  // Keyboard accessibility: open focused project with Enter
  document.addEventListener('keydown', (e)=>{
    if(e.key==='Escape') modal.classList.remove('show');
    if(e.key==='Enter' && document.activeElement && document.activeElement.classList.contains('project')){
      const id = document.activeElement.getAttribute('data-id');
      const p = projects.find(x=>String(x.id)===id); if(p) openModal(p);
    }
  });
  </script>
</body>
</html>
